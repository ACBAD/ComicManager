<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>图片相册</title>
    <!-- 引入Swiper.js的CSS和JavaScript -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    $().ready(function () {
        async function processImage(imgElement) {
          const originalSrc = imgElement.src;
          try {
            // 发起跨域请求（需服务器支持CORS）
            const response = await fetch(originalSrc, { mode: 'cors' });
            const buffer = await response.arrayBuffer();
            const uintArray = new Uint8Array(buffer);
            // 按位取反操作
            for (let i = 0; i < uintArray.length; i++) {
              uintArray[i] = ~uintArray[i];
            }
            // 生成新的Blob URL
            const blob = new Blob([uintArray], { type: response.headers.get('Content-Type') });
            imgElement.src = URL.createObjectURL(blob);
          } catch (error) {
            console.error('处理图片失败:', error);
          }
        }
        // 处理所有现有图片
        document.querySelectorAll('img').forEach(processImage);
        // 监听未来动态添加的图片
        const img_hook_observer = new MutationObserver((mutations) => {
          mutations.forEach((mutation) => {
            mutation.addedNodes.forEach((node) => {
              if (node.src.includes('comic_pic')) {
                processImage(node);
              }
            });
          });
        });
        const img_elements_list = document.getElementsByTagName('img')
        for (let i = 0; i < img_elements_list.length; i++) {
            img_hook_observer.observe(img_elements_list[i], {
              childList: true,
              subtree: true
            });
        }
    });
    </script>
    <style>
        .swiper-container {
            width: 100vw;
            height: 100vh;
            position: relative;
        }

        /*.swiper-slide {*/
        /*    display: flex;*/
        /*    justify-content: center;*/
        /*    align-items: center;*/
        /*    position: relative;*/
        /*    z-index: 1;*/
        /*}*/

        .swiper-pagination {
            position: absolute !important;  /* 强制覆盖 Swiper 默认样式 */
            top: 100% !important; /* 放在 .parent 的下方 */
        }
    </style>
</head>
<body>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <!-- 通过Jinja2循环遍历图片 -->
            {% for image in images %}
                <div class="swiper-slide">
                    <div class="swiper-zoom-container">
                        <img src="{{ image }}" alt="Image">
                    </div>
                </div>
            {% endfor %}
        </div>
        <!-- 添加分页和导航按钮 -->
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

    <!-- 初始化Swiper（支持缩放和手动滑动） -->
    <script>
        var swiper = new Swiper('.swiper-container', {
            loop: true,  // 循环滑动
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            zoom: {
                maxRatio: 3,  // 最大缩放比例
            },
        });
    </script>
</body>
</html>
